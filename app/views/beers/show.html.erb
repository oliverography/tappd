<h1>Beers#show</h1>
<p>Find me in app/views/beers/show.html.erb</p>

<p>
  LABEL:
  <%= image_tag @beer.labels.large unless @beer.labels.nil? %><br />

  NAME: <%= @beer.name %><br />

  <!-- brewery to be added -->

  STYLE: <%= @beer.style.name %><br />

  ABV: <%= @beer.abv %><br />

  IBU: <%= @beer.ibu %><br />

  AVAILABILITY: <%= @beer.available.name unless @beer.available.nil? %><br />

  DESCRIPTION: <%= @beer.description %><br />
</p>

<%= button_to "NO THANKS", beers_path, { method: "get" } %>

<%= form_for @beerLocal, :url => "/beers" do |f| %>
  <%= f.hidden_field :label, value: @beer.labels.medium unless @beer.labels.nil? %> 
  <%= f.hidden_field :name, value: @beer.name %>
  <!-- brewery to be added -->
  <%= f.hidden_field :style, value: @beer.style.name unless @beer.style.nil? %>  
  <%= f.hidden_field :abv, value: @beer.abv %>
  <%= f.hidden_field :ibu, value: @beer.ibu %>
  <%= f.hidden_field :available, value: @beer.available.name unless @beer.available.nil? %>
  <%= f.hidden_field :user_id, value: 1 %>
  <!-- < f.hidden_field :user_id, value: current_user.id unless current_user.id.nil? > -->
  <%= f.hidden_field :description, value: @beer.description %>
  
  <%= f.submit value: "POST", class: "button" %>
<% end %>