// inserts modal html
$( "body" ).append( "<%= j render(:partial => 'match') %>" );
// fade in
$( "#overlay" ).fadeIn(150);

// Click "X" to exit out and reload
$("#close").on('click', "#lightbox", function() {
  // fade out
  $( "#lightbox" ).fadeOut(150);
  // remove lightbox after setTimeout
  setTimeout(function() { 
    $( "#lightbox" ).remove();
  }, 150);
});