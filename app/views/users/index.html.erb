<div class="head1"><%= image_tag("gear.png") %><span>TAPPD</span><%= link_to "HOME", users_path %></div>


<center>
<div id ="mylist">
<% if @user.beers.length == 0 %>
  <p>No beers yet.</p>
<% end %>

<% @user.beers.order('created_at DESC').each do |beer| %>

<%= image_tag beer.label unless beer.label.nil? %>
    <p> NAME: <%= beer.name %><br><br>
            ABV:<%= beer.abv %><br><br>
        DESCRIPTION:<br> <%= beer.description %><br><br></p>
  

   
    <p class="beerbrand"><%= link_to("DELETE", beer_path(beer.id), method: :delete, data: {confirm: 'Are you sure?'}) %></p>

<% end %>
</div>
</center>