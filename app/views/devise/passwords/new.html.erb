<div id="orange_bg"></div>

<section>
  <div id="wrapper">
    <div id="title_area">
      <%= image_tag "heartbottle.svg", id: "logo" %>

      <div id="title">TAPPD</div>
      <h2>Forgot your password?</h2>
    </div>
    <div id="devise_form">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>

        <%= f.email_field :email, autofocus: true, placeholder: "EMAIL", class: "field" %>
        <%= f.submit "Send me reset password instructions", class: "button sign" %>
      <% end %>
      <div id="devise_links">
        <%= render "devise/shared/links" %>
      </div>
    </div> 
  </div>
</section>